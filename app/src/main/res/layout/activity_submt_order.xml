<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:app="http://schemas.android.com/apk/res-auto"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="vertical">
	
	<ScrollView
			android:layout_width="match_parent"
			android:layout_height="match_parent">
		
		<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="vertical">
			
			<include layout="@layout/include_page_title"/>
			
			<android.support.constraint.ConstraintLayout
					android:layout_width="match_parent"
					android:layout_height="120dp"
					>
				
				<TextView
						android:id="@+id/textView2"
						style="@style/TextStyleTitle"
						android:text="Simmon 186 **** 1234"
						android:layout_marginTop="28dp"
						app:layout_constraintTop_toTopOf="parent"
						app:layout_constraintStart_toStartOf="parent"
						android:layout_marginStart="30dp"/>
				
				
				<TextView
						android:id="@+id/textView4"
						style="@style/TextStyleTitleGray"
						android:text="送至"
						android:layout_marginTop="14dp"
						app:layout_constraintTop_toBottomOf="@+id/textView2"
						android:layout_marginBottom="8dp"
						app:layout_constraintBottom_toBottomOf="parent"
						app:layout_constraintVertical_bias="0.0"
						app:layout_constraintStart_toStartOf="parent"
						android:layout_marginStart="32dp"/>
				
				<TextView
						android:id="@+id/location"
						style="@style/TextStyleTitle"
						android:text="北京市 朝阳区"
						android:textSize="13sp"
						android:drawableLeft="@drawable/ic_location"
						android:drawablePadding="4dp"
						android:layout_height="wrap_content"
						app:layout_constraintStart_toEndOf="@+id/textView4"
						android:layout_marginStart="8dp"
						android:layout_marginTop="16dp"
						app:layout_constraintTop_toBottomOf="@+id/textView2"
						android:layout_marginBottom="8dp"
						app:layout_constraintBottom_toBottomOf="parent"
						android:layout_width="wrap_content"
						app:layout_constraintVertical_bias="0.0"/>
			
			
			</android.support.constraint.ConstraintLayout>
			
			<View
					android:layout_width="match_parent"
					android:layout_height="1dp"
					android:background="#eee"/>
			
			<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:orientation="horizontal"
					android:paddingLeft="30dp"
					android:paddingRight="30dp"
					android:paddingTop="18dp"
					android:paddingBottom="18dp"
					>
				
				<ImageView
						android:layout_width="100dp"
						android:layout_height="100dp"
						android:src="@drawable/gio_marker_cup"/>
				
				<LinearLayout
						android:layout_width="match_parent"
						android:layout_height="match_parent"
						android:layout_marginLeft="22dp"
						android:gravity="center_vertical"
						android:orientation="vertical">
					
					<TextView
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							style="@style/TextStyleTitle"
							android:text="GIO 马克杯"
							/>
					
					<TextView
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							style="@style/TextStyleTitle"
							android:text="白色"
							android:textSize="10sp"
							android:textColor="#2d2d2d"
							android:layout_marginTop="5dp"
							android:padding="10dp"
							android:background="@drawable/shape_text_border"
							/>
					
					<TextView
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:layout_marginTop="5dp"
							android:text="￥ 39"
							android:textColor="#2d2d2d"
							android:textSize="14sp"/>
				</LinearLayout>
			
			
			</LinearLayout>
			
			<View
					android:layout_width="match_parent"
					android:layout_height="1dp"
					android:background="#eee"/>
			
			<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:orientation="vertical"
					>
				
				<TextView
						style="@style/TextStyleTitle"
						android:layout_marginLeft="30dp"
						android:layout_marginTop="16dp"
						android:text="支付配送"
						/>
				
				<TextView
						style="@style/TextStyleTitle"
						android:textSize="14sp"
						android:layout_marginLeft="30dp"
						android:layout_marginTop="16dp"
						android:text="在线支付"
						/>
				
				<TextView
						style="@style/TextStyleTitle"
						android:layout_marginLeft="30dp"
						android:layout_marginTop="8dp"
						android:textSize="14sp"
						android:text="GIO 快递"
						android:layout_marginBottom="16dp"
						/>
			</LinearLayout>
			
			<View
					android:layout_width="match_parent"
					android:layout_height="1dp"
					android:background="#eee"/>
			
			<RelativeLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:paddingLeft="30dp"
					android:paddingRight="30dp"
					android:paddingTop="16dp"
					android:paddingBottom="16dp"
					>
				
				<TextView
						android:id="@+id/order"
						style="@style/TextStyleTitle"
						android:text="商品金额"/>
				
				<TextView
						android:id="@+id/fee"
						style="@style/TextStyleTitle"
						android:layout_below="@+id/order"
						android:layout_marginTop="20dp"
						android:text="运费"
						/>
				
				<TextView
						android:id="@+id/order_fee"
						style="@style/TextStyleTitle"
						android:textSize="14sp"
						android:layout_alignParentRight="true"
						android:layout_marginTop="2dp"
						android:text="￥ 39"/>
				
				<TextView
						style="@style/TextStyleTitle"
						android:textSize="14sp"
						android:layout_alignParentRight="true"
						android:text="￥ 10"
						android:layout_marginTop="24dp"
						android:layout_below="@+id/order_fee"/>
			</RelativeLayout>
			
			
			<View
					android:layout_width="match_parent"
					android:layout_height="1dp"
					android:background="#eee"/>
		
		</LinearLayout>
	</ScrollView>
	
	<RelativeLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical"
			android:background="#fff"
			android:layout_alignParentBottom="true">
		
		<View
				android:layout_width="match_parent"
				android:layout_height="1dp"
				android:background="#eee"/>
		
		<TextView
				style="@style/TextStyleTitle"
				android:layout_centerVertical="true"
				android:text="合计：￥49"
				android:layout_marginLeft="30dp"/>
		
		<Button
				android:id="@+id/submit_order"
				android:layout_marginTop="12dp"
				android:layout_marginBottom="12dp"
				android:layout_width="120dp"
				android:layout_height="40dp"
				android:layout_centerVertical="true"
				android:layout_alignParentRight="true"
				android:text="提交订单"
				android:layout_marginRight="30dp"
				style="@style/Base.Widget.AppCompat.Button.Borderless"
				android:background="@drawable/selector_button_bg"
				android:textColor="#fff"/>
	
	</RelativeLayout>
</RelativeLayout>
